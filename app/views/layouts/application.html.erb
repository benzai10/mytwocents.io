<!DOCTYPE html>
<html>
  <head>
  <title>Mytwocents</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <!-- Fixed navbar -->
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= image_tag("new_logo.jpg", class: "") %>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right ">
          <li class="counter"><%= render 'counter', number: @number %></li>
            <li class="new_posts"><%= render 'new_posts', new: 0 %></li>
            <li><%= link_to "Create Post", '#', data: {toggle:"modal",target: "#myModal"}  %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Username here <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><a href="#">User settings</a></li>
                <li><a href="#">Terms of service</a></li>
                <li class="divider"></li>
                <li><a href="#">Log out</a></li>
              </ul>
            </li>
          </ul>

        </div><!--/.nav-collapse -->
      </div>
    </div>

  <%= render 'shared/g_analytics' %>
  <%= yield %>
  <%= render 'shared/user_voice' %>

  <%= render 'modal' %>
  </body>
</html>
